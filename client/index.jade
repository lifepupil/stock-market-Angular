doctype html
html(lang='en', ng-app='day-trader')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title Stock Angular
    link(rel='stylesheet', href='//maxcdn.bootstrapcdn.com/bootswatch/3.3.4/paper/bootstrap.min.css')
    link(rel='stylesheet', href='/vendor/font-awesome/css/font-awesome.min.css')
    link(rel='stylesheet', href=isProd ? '/index.min.css' : '/index.css')
    link(rel='shortcut icon', href='/favicon.ico')
  body(ng-controller="master")
    h1#title Stock Trading App
    h3#title2 {{user.name}} {{user.balance  | currency}}
    .container
      .row
        .col-xs-6          
          label(for="name") Name
          input#name(type="text" placeholder="name" ng-model="user.name")
        .col-xs-6
          input#symbol(type="text" placeholder="symbol" ng-model="stock.symbol")
      .row
        .col-xs-6
          label(for="balance") Balance
          input#balance(type="number" ng-model="user.balance")
        .col-xs-6
          input#numShares(type="number" placeholder="number of shares" ng-model="stock.shares")
          select#pickPort(placeholder="select" ng-model="stock.portfolio")
            option(value="technology") Technology
            option(value="medical") Medical
            option(value="realestate") Real Estate
          
      .row
        .col-xs-6
          button.btn-sm(ng-click="saveUser()") Save User
        .col-xs-6
          button.btn-sm(ng-click="buyStock()") Buy Stock
    .container#portfolios
      .row
        .col-md-4
          h3 Technology
          h4 Total = {{total('technology') | currency}} 
          table.table.table-striped
            thead
              th Symbol
              th Value
              th #
            tbody
              tr(ng-repeat="stock in technology")
                td {{stock.symbol}}
                td {{stock.price * stock.shares | currency}}
                td {{stock.shares}}
        .col-md-4
          h3 Medical
          h4 Total = {{total('medical') | currency}}
          table.table.table-striped
            thead
              th Symbol
              th Value
              th #
            tbody
              tr(ng-repeat="stock in medical")
                td {{stock.symbol}}
                td {{stock.price * stock.shares | currency}}
                td {{stock.shares}}
        .col-md-4
          h3 Real Estate
          h4 Total = {{total('realestate') | currency}}
          table.table.table-striped
            thead
              th Symbol
              th Position
              th #
            tbody
              tr(ng-repeat="stock in realestate")
                td {{stock.symbol}}
                td {{stock.price * stock.shares | currency}}
                td {{stock.shares}}
      
    script(src='/vendor/jquery/dist/jquery.min.js')
    script(src='/vendor/bootstrap/dist/js/bootstrap.min.js')
    script(src='/vendor/lodash/lodash.min.js')
    script(src='/vendor/firebase/firebase.js')
    script(src='/vendor/angular/angular.min.js')
    script(src='/vendor/angularfire/dist/angularfire.min.js')
    script(src=isProd ? '/index.min.js' : '/index.js')
